// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Optimal for Vercel Postgres
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  USER
  ADMIN
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  BET
  WIN
  REFUND
  BONUS
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

// Key Models
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  balance       Decimal   @default(0.0) @db.Decimal(20, 2) // Precision for currency
  role          Role      @default(USER)
  image         String?
  emailVerified DateTime?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  transactions  Transaction[]
  bets          Bet[]
  sessions      Session[] // For NextAuth.js if used
  accounts      Account[] // For NextAuth.js if used
}

model Transaction {
  id        String            @id @default(cuid())
  amount    Decimal           @db.Decimal(20, 2)
  type      TransactionType
  status    TransactionStatus @default(PENDING)
  currency  String            @default("USD")
  metadata  Json?             // Flexible field for payment provider details (Stripe, Crypto, etc.)
  
  userId    String
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}

model Bet {
  id          String   @id @default(cuid())
  amount      Decimal  @db.Decimal(20, 2)
  payout      Decimal  @default(0) @db.Decimal(20, 2)
  multiplier  Decimal? @db.Decimal(10, 4)
  isWin       Boolean  @default(false)
  gameType    String   // e.g., "roulette", "slots", "blackjack"
  gameData    Json?    // Specific data (e.g., chosen number, card hand)
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
}

// NextAuth.js specific models (optional but recommended for Vercel apps)
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
